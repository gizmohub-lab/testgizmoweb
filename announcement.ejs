      // If not viewed, show red bell icon
      if (!announcementViewed) {
        document.getElementById('bell-icon').style.display = 'inline-block';
      } else {
        // Hide bell icon if already viewed
        document.getElementById('bell-icon').style.display = 'none';
      }
  
      // Click event to simulate opening the announcement page
      document.querySelector('.link a[href="#"]').addEventListener('click', function () {
        localStorage.setItem('announcementViewed', 'true');
        document.getElementById('bell-icon').style.display = 'none';
      });
    });
  
